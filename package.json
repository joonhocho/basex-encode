{
  "name": "basex-encoder",
  "version": "0.0.4",
  "description": "Encode / decode any base X to and from string or buffer",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json && tscpaths -p ./tsconfig.json -s ./src -o ./lib",
    "clear": "rm -rf ./lib ./coverage",
    "format": "prettier --write \"./*.{js,jsx,ts,tsx}\" \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "tslint -c ./tslint.json \"src/**/*\"",
    "lint:fix": "tslint --fix -c ./tslint.json \"src/**/*\"",
    "start": "yarn clear && yarn format && yarn lint:fix && yarn test && yarn build",
    "prepublish": "yarn start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joonhocho/basex-encoder.git"
  },
  "keywords": [
    "TypeScript",
    "base-x",
    "base64",
    "base62",
    "base58",
    "decode",
    "decoding",
    "encode",
    "encoding",
    "crypto",
    "crytography"
  ],
  "author": "Joon Ho Cho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joonhocho/basex-encoder/issues"
  },
  "homepage": "https://github.com/joonhocho/basex-encoder#readme",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "coveralls": "^3.0.4",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tscpaths": "^0.0.9",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {}
}
